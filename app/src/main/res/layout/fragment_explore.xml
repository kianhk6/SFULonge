                android:layout_marginStart="10dp"
                android:background="@drawable/detail_white_outline"
                android:padding="6dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Male"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="6dp"
            android:text="Interests:"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/interestsLinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/interest1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/detail_white_outline"
                android:maxWidth="120dp"
                android:padding="8dp"
                android:text="Theater and Performing Arts"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/interest2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/detail_white_outline"
                android:maxWidth="120dp"
                android:padding="8dp"
                android:text="Social Impact and Volunteering"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/interestsLinearLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="45dp"
            android:layout_marginEnd="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/interest3"
                android:layout_width="wrap_content"
